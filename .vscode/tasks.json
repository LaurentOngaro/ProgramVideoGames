{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "presentation": {
    "reveal": "silent",
    "panel": "shared"
  },
  "problemMatcher": {
    "owner": "odin",
    "source": "Odin",
    "fileLocation": "absolute",
    "pattern": {
      "regexp": "^(.*?)(\\((\\d+):(\\d+)\\))\\s+(Syntax\\s+)?(Error|Warning):\\s+(.+)$",
      "file": 1,
      "line": 3,
      "column": 4,
      "severity": 6,
      "message": 7
    }
  },
  "tasks": [
    {
      "label": "Create build directory - Debug",
      "type": "shell",
      "linux": {
        "command": "mkdir -p ./out/debug"
      },
      "windows": {
        "command": "cmd",
        "args": [
          "/C",
          "if not exist .\\out\\debug mkdir .\\out\\debug"
        ]
      }
    },
    {
      "label": "Create build directory - Release",
      "type": "shell",
      "linux": {
        "command": "mkdir -p ./out/release"
      },
      "windows": {
        "command": "cmd",
        "args": [
          "/C",
          "if not exist .\\out\\release mkdir .\\out\\release"
        ]
      }
    },
    {
      "label": "Build - Debug",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "type": "process",
      "command": "odin",
      "args": [
        "build",
        "${workspaceRoot}\\src",
        "-out:${workspaceFolderBasename}.exe",
        "-debug",
        "-show-timings",
        "-thread-count:14",
        "-strict-style",
        "-vet-unused",
        "-vet-unused-variables",
        "-vet-unused-imports",
        "-vet-shadowing",
        "-vet-style",
        "-vet-semicolon",
        "-vet-cast"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\out\\debug"
      },
      "dependsOn": "Create build directory - Debug"
    },
    {
      "label": "Build - Release",
      "group": "build",
      "type": "process",
      "command": "odin",
      "args": [
        "build",
        "${workspaceRoot}\\src",
        "-out:${workspaceFolderBasename}.exe",
        "-o:speed",
        "-strict-style",
        "-thread-count:14",
        "-vet-unused",
        "-vet-unused-variables",
        "-vet-unused-imports",
        "-vet-shadowing",
        "-vet-style",
        "-vet-semicolon",
        "-vet-cast"
      ],
      "options": {
        "cwd": "${workspaceFolder}\\out\\release"
      },
      "dependsOn": "Create build directory - Release"
    },
    {
      "label": "Check",
      "group": "build",
      "type": "process",
      "command": "odin",
      "args": [
        "check",
        "${workspaceRoot}\\src",
        "-strict-style",
        "-vet-unused",
        "-vet-unused-variables",
        "-vet-unused-imports",
        "-vet-shadowing",
        "-vet-style",
        "-vet-semicolon",
        "-vet-cast"
      ]
    },
    {
      "label": "Clean",
      "group": "build",
      "type": "shell",
      "linux": {
        "command": "rm",
        "args": [
          "-rf",
          "${workspaceFolder}/out"
        ]
      },
      "windows": {
        "command": "Remove-item",
        "args": [
          "${workspaceFolder}\\out",
          "-recurse"
        ]
      }
    },
    {
      "label": "Profile Memory",
      "group": "test",
      "type": "process",
      "dependsOn": "Build - Debug",
      "command": "MTuner.exe",
      "args": [
        "${workspaceRoot}/out/debug/${fileDirnameBasename}.exe"
      ]
    }
  ]
}
